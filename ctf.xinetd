service ctf
{
    disable = no
    socket_type = stream
    protocol    = tcp
    wait        = no
    user        = root
    type        = UNLISTED
    port        = 10000
    bind        = 0.0.0.0
    server      = /usr/sbin/chroot
    banner_fail = /etc/banner_fail
    per_source  = 5 # the maximum instances of this service per source IP address
    rlimit_cpu  = 10 # the maximum number of CPU seconds that the service may use
}
